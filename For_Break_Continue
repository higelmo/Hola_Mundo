package pkgfor;


public class For {

        public static void main(String[] args) {
        
    // for me hace 10 iteraciones en este caso.//
            for (int num1 = 1;num1 <= 10; num1 ++){
                System.out.println(num1);
            }
    //Creo el array semana y con el bucle for, obtengo todos los elementos del bucle.
    String[] semana = {"Lunes","Martes","Miercoles","Jueves","Viernes"};
            
            for (String x: semana){
            System.out.println(x);
            }
                
   // Ejemplo de utilización del break, este detiene el bucle.
            
            for (int num2 = 0;num2 <= 10;num2 ++){
                if (num2 == 3){
                    break;
                }
                
                System.out.println(num2);
            
            }
   // Continue lo que hace es continuar la ejecución pero sin realizar esa pasada de bucle. Imprime de 0 a 10 sin imprimir de 5 a 8 en este caso. 
            for (int num3 = 0;num3 <= 10;num3 ++){
                if (num3 >=5 && num3 <= 8){
                    continue;
                }
            System.out.println(num3);
            }
                
      System.out.println("Hola Mundo");      
            
    }
    
}
